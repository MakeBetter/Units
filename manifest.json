{
    "name": "Units",
    "version": "0.5",
    "manifest_version": 2,
    "description": "Keyboard navigation on web pages + better focus using units.",
     "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "settings/popup.html",
        "default_title": "Units"
    },

    "background": {
        "scripts": [
            "common/helper.js",

            "background_scripts/data/defaultSettings.js",
            "background_scripts/data/unitsData.js",
            "background_scripts/data/searchData.js",

            "background_scripts/searchExternalSite.js",
            "background_scripts/mainBackgroundScript.js"
        ]
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],

            "js": [
                "vendor/jquery-1.9.0.min.js",
                "vendor/underscore-dependencies.js",
                "vendor/backbone-events.js",
                "vendor/mousetrap-modified.js",

                "content_scripts/initializeNamespace.js",
                "common/helper.js",
                "content_scripts/CONSTS.js",

                "content_scripts/mod_keyboardLib.js",
                "content_scripts/mod_events.js",
                "content_scripts/mod_mutationObserver.js",
                "content_scripts/mod_core.js",
                "content_scripts/mod_chromeAltHack.js",
                "content_scripts/mod_CUsMgr.js"
            ],

            "css": ["units.css"],
            "run_at": "document_start",
            "all_frames": false
        }
    ],

    "permissions": [
        "tabs"
    ]
}